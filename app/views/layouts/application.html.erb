  </head>
  <body>

<div class="navbar navbar-inverse">
 <div class="navbar">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-responsive-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="#">GeoCaching Challenge</a>
        <div class="nav-collapse collapse navbar-responsive-collapse">
          <ul class="nav">
            <li class="active"><a data-target="#" href="#" class="dropdown-toggle" id="dLabel" role="button" data-toggle="dropdown">
Home</a></li>
        <% if current_user %>
              <li><%= link_to "My Answers", posts_path  %></li>
        <% end %>

    <% if current_user && current_user.admin? %>
        <li class="divider-vertical"></li>
            <li class="dropdown">
              <%= link_to "Users", users_path, :class => "dropdown-toggle" %>
            </li>
          </li>
              <li><%= link_to "Questions", qandas_path %></li>           
              <li><a href=""> Reports</a> </li>  
          </ul>
    <% end %>
          <form class="navbar-search pull-left" action="">
            <input type="text" class="search-query span2" placeholder="Search">
          </form>
          <ul class="nav pull-right">

            <li class="divider-vertical"></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.username %> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                  <li><%= link_to 'Profile', user_path(current_user) %></li>
                  <li><%= link_to 'Logout', logout_url  %></li>
              </ul>
            </li>
          </ul>
        </div><!-- /.nav-collapse -->
      </div>
    </div><!-- /navbar-inner -->
  </div><!-- /navbar -->
</div>




    <div class="container">
      <div class="content">
        <div class="row">
           <div class="span12">
              <%= yield %>
            </div>
