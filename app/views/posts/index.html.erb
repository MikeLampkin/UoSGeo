<h1>My Answer Sheet : <%= current_user.username %></h1>

<%= link_to 'New', new_post_path, :class => 'btn btn-mini btn-primary' %>
<br><br>
<table class="table table-striped table-bordered">
  <tr>
    <th>Merit Badge</th>
    <th>Question</th>
    <th>My Answer</th>
    <th>Edit</th>
  </tr>

<% if current_user %>
<% @posts.each do |post| %>
  <tr>
    <td><%= image_tag 'meritbadges/'+post.qanda.image, :height => '40px', :width => '40px'  %><br><%= post.qanda.meritbadge %></td>
    <td><%= post.qanda.question %></td>
    <td class="span5"><%= post.my_answer %></td>
    <td class="span1"><center><%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-mini btn-primary'  %>
<br>
    <%= link_to 'Destroy', post, :class => 'btn btn-mini btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>

    </td>
  </tr>
    <% end %>
<% end %>
</table>

