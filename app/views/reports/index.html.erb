<%- model_class = User -%>
<div class="page-header">
  <h1>Final Report</h1>
</div>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>EMAIL</th>
      <th>ANSWERS</th>
      <th>ADMIN</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.posts.count %></td>
      <td><%= link_to 'Show', report_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
