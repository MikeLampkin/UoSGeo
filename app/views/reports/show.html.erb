<h1>Answer Sheet for <%= @user.username %></h1>


<br><br>
<table class="table table-striped table-bordered">
  <tr>
    <th>Merit Badge</th>
    <th>Question</th>
    <th>Answer</th>
  </tr>

<% if current_user %>
<% Qanda.all.map { |q| [q.id,Post.where(user_id: @user.id, qanda_id: q.id).first.try(:my_answer)] }.each do |answers| %>
  <tr>
    <td><%= image_tag 'meritbadges/'+ Qanda.find(answers.first).image, :height => '40px', :width => '40px'  %><br><%= Qanda.find(answers.first).meritbadge %></td>
    <td><%= Qanda.find(answers.first).question %></td>
    <td class="span5"><%= answers.last %></td>
  </tr>
    <% end %>
<% end %>
</table>

